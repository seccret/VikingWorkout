<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/ivItemWorkout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/workout2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tvItemWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Medium Text"
        android:fontFamily="sans-serif-light"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ivItemWorkout"
        android:paddingLeft="20dp"
        />
    <TextView
        android:id="@+id/tvItemWBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="By: John Doe"
        android:fontFamily="sans-serif-light"
        android:textSize="15sp"
        android:textColor="#9a9a9a"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ivItemWorkout"
        android:layout_below="@id/tvItemWorkout"
        android:paddingLeft="30dp"
        />
    <ImageView
        android:id="@+id/ivItemWTimer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/timer2"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        />

</RelativeLayout>
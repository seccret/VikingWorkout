<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4">

    <RelativeLayout
        android:id="@+id/rlWorkout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.35">
        <ImageView
            android:id="@+id/ivWorkoutImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <View android:id="@+id/separator"
            android:background="#ffa500"
            android:layout_width = "fill_parent"
            android:layout_height="3dip"
            android:layout_centerVertical ="true"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/ivWorkoutPlay"
            android:background="@drawable/playorange"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <com.example.patirk.vikingworkout.GifView
        android:id="@+id/gif_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.35"
        android:layout_gravity="left"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tvWorkoutTime"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:textColor="#ffa500"
        android:textSize="50dp"
        android:textStyle="bold"
        android:fontFamily="times new roman"
        android:gravity="center"
        android:visibility="gone"
            />

    <RelativeLayout
        android:id="@+id/rlWorkoutName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">
        <TextView
            android:id="@+id/tvWorkoutName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Workout Name"
            android:textSize="30dp"
            android:fontFamily="times new roman"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/tvWorkoutBy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="By: Jane Doe"
            android:textSize="15dp"
            android:fontFamily="times new roman"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvWorkoutExercise"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@drawable/headlinebox"
        android:text="Exercises"
        android:fontFamily="times new roman"
        android:gravity="center"
        android:textSize="15dp"/>

    <ListView
        android:id="@+id/lvWorkoutList"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.95"
        android:layout_gravity="bottom"

        >
    </ListView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4">

    <RelativeLayout
        android:id="@+id/rlWorkout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.35">
        <ImageView
            android:id="@+id/ivWorkoutImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/wobanner2"
            />
        <TextView
            android:id="@+id/tvWorkoutName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Workout Name"
            android:textSize="50dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="5">
            <TextView
                android:id="@+id/tvWorkoutLenght"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="30 MIN"
                android:fontFamily="sans-serif-bold"
                android:textColor="@color/white"
                android:gravity="bottom"
                android:background="@drawable/time"
                />
            <ImageView
                android:id="@+id/ivSeperator2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/seperator"/>
            <TextView
                android:id="@+id/tvWorkoutDifficulity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EXTREME"
                android:fontFamily="sans-serif-bold"
                android:textColor="@color/white"
                android:gravity="bottom"
                android:background="@drawable/difficulityextreme"
                />
            <ImageView
                android:id="@+id/ivSeperator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/seperator"/>
            <TextView
                android:id="@+id/tvWorkouttemplate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7 MINUTE"
                android:fontFamily="sans-serif-bold"
                android:textColor="@color/white"
                android:gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlWorkoutPlay"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:visibility="gone">
        <com.example.patirk.vikingworkout.GifView
            android:id="@+id/gif_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            />
        <View android:id="@+id/separator_seven"
            android:background="#fba500"
            android:layout_width = "fill_parent"
            android:layout_height="3dip"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tvWorkoutTime"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:textColor="#ffa500"
        android:textSize="100dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:visibility="gone"
        />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tvWorkoutExercise"
        android:layout_width="345dp"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:layout_marginTop="30dp"
        android:background="#7e7e7e"
        android:text="Block 1"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-bold"
        android:textSize="15dp"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:id="@+id/rlWorkoutList"
        android:layout_width="345dp"
        android:layout_height="0dp"
        android:layout_weight="1.95"
        android:layout_gravity="center">
        <ListView
            android:id="@+id/lvWorkoutList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            >
        </ListView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/llWorkoutPlay"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:weightSum="2"
        android:visibility="gone">
        <TextView
            android:id="@+id/tvWorkoutPause"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Pause"
            android:background="#fba500"
            android:textSize="25dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tvWorkoutResume"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="Resume"
            android:textSize="25dp"
            android:background="#fba500"
            android:fontFamily="sans-serif-light"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tvWorkoutStop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Stop"
            android:background="#fba500"
            android:textSize="25dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>

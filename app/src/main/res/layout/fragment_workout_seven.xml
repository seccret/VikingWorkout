<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:background="@drawable/background">
    <RelativeLayout
        android:id="@+id/rlWorkoutSeven"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.35">
        <ImageView
            android:id="@+id/ivSevenBanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/wobanner2"
            />
        <TextView
            android:id="@+id/tvSevenName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Workout Name"
            android:textSize="50dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:id="@+id/llSevenInfo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="5">
            <TextView
                android:id="@+id/tvSevenLenght"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="30 MIN"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/ivSevenSeperator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@drawable/seperator"/>
            <TextView
                android:id="@+id/tvSevenMuscleGroup"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="MuscleGroup"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/ivSevenSeperator2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@drawable/seperator"/>
            <TextView
                android:id="@+id/tvSevenMadeBy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="Made By:"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llSevenTime"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.05"
        android:layout_marginTop="80dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/tvSevenTime"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffa500"
            android:textSize="110dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            />
        <Chronometer
            android:id="@+id/chrono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.65"
        android:orientation="vertical">
    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llSevenPlay"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:weightSum="2"
        android:visibility="gone"
        android:background="#fba500"
        >
        <TextView
            android:id="@+id/tvSevenPause"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible"
            android:text="Pause"
            android:textSize="25dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tvsevenResume"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="Resume"
            android:textSize="25dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tvsevenDone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible"
            android:text="Done"
            android:textSize="25dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    tools:context=".FragmentProfile">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoPanelHeight="400dp"
        sothree:umanoShadowHeight="4dp"
        sothree:umanoFadeColor="@android:color/transparent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="295dp">
            <android.support.v4.view.ViewPager
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>
            <ImageView
                android:id="@+id/ivProfileBanner"
                android:background="@drawable/banner4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OkÃ¤nd"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:paddingTop="45dp"
                style="@style/TextAppearance.AppCompat.Title"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:clickable="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_marginTop="75dp"
            android:minHeight="1200dp"
            android:background="@color/transparent"
            >
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/search_container"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:orientation="horizontal"
                android:weightSum="3"
                android:background="#e3e3e3">
                <Button
                    android:id="@+id/bToggleLeft"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="My Workout"
                    android:textColor="#fba500"
                    android:background="@drawable/button_selected"/>
                <Button
                    android:id="@+id/bToggleMiddle"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Global List"
                    android:textColor="#6d6d6d"
                    android:background="@drawable/button_unselected"/>
                <Button
                    android:id="@+id/bToggleRight"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Statistics"
                    android:textColor="#6d6d6d"
                    android:background="@drawable/button_unselected"/>
            </LinearLayout>

            <ListView
                android:id="@+id/lvWorkouts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:verticalSpacing="2dp"
                android:stretchMode="columnWidth"
                />
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</RelativeLayout>
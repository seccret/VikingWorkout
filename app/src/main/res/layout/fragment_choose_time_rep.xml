<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#70000000"
    android:weightSum="2"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/llChooseTimeRep"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@color/white"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@color/white"
                android:weightSum="2">
                <TextView
                    android:id="@+id/tvChooseTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Time (Sec)"
                    />
                <TextView
                    android:id="@+id/tvChooseRep"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Repitition"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@color/white"
                android:weightSum="5">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:weightSum="7"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvChooseLeftMinute"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        android:textSize="23sp"/>
                    <TextView
                        android:id="@+id/tvChooseRightMinute"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        android:textSize="23sp"/>
                    <TextView
                        android:id="@+id/tvChooseMiddleDots"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=":"
                        android:textSize="23sp"/>
                    <TextView
                        android:id="@+id/tvChooseLeftSecond"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        android:textSize="23sp"/>

                    <TextView
                        android:id="@+id/tvChooseRightSecond"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        android:textSize="23sp"/>
                    <ImageView
                        android:id="@+id/ivChooseErase"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/abc_btn_check_material"
                        />
                    </LinearLayout>
                </LinearLayout>
            <GridView
                android:id="@+id/gvChooseKeypad"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:layout_marginTop="0dp"
                android:numColumns="3"
                android:gravity="center"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
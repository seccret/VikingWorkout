<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:weightSum="2"
    android:background="@color/white"
    android:id="@+id/llItemWorkout"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_weight="1.5">
    <ImageView
        android:id="@+id/ivItemEvent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/workout2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tvItemEvent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:textSize="25sp"
        android:text="Medium Text"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="6"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/time2"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvEventLenght"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 MIN"
            android:textSize="13sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#8f8f8f"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/time2"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvEventMusclegroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BP"
            android:textSize="13sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#8f8f8f"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/time2"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvEventMadeBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="13sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#8f8f8f"
            android:layout_gravity="center"
            />
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvEventPerformed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="Performed"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/tvEventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="Time"
        android:layout_gravity="center"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="10">

    <TextView
        android:id="@+id/tvBrowseCat"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Settings"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/material_blue_grey_800"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >
        <Button
            android:id="@+id/bSettingsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change name"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            />

        <EditText
            android:id="@+id/etSettingsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:layout_gravity="right"
            android:gravity="right"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >
        <Button
            android:id="@+id/bSettingsDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Desc"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            />

        <EditText
            android:id="@+id/etSettingsDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Description"
            android:capitalize="sentences"
            android:ems="10"
            android:layout_gravity="right"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/bSettingsCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change profile picture"
            android:layout_gravity="center_vertical"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivSettingsPic"
            android:src="@drawable/abc"
            android:layout_marginLeft="50dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvSettingsSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Profile"
        />

</LinearLayout>
